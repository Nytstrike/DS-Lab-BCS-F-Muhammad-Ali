#include <iostream>
#include <windows.h>

using namespace std;

int ackermannFunction(int m, int n)
{
    if (m == 0)
    {
        //cout<<"Returning:"<<n -1 <<" (n + 1)"<<endl;
        return n + 1;
       
    }
    if (m > 0 && n == 0)
    {
        //cout<<"Returning:"<< m -1 <<" (m - 1)"<<endl;
        return ackermannFunction(m - 1, 1);
    
    }
    //cout<<"Returning:"<<m-1 <<" and "<<n-1<<"(m-1 & n-1)"<<endl;
    return ackermannFunction(m - 1, ackermannFunction(m, n - 1));
    
}

int main()
{
    int m, n;
    //instruction for the user 
    cout<<"For practical/faster computation keep the values of m && n <= 3 "<<endl;
    Sleep(1000);
    do
    {
        cout << "Enter value for m (must be >= 0): ";
        cin >> m;

        if (m >= 0) break;
        cout << "Invalid input. m cannot be negative!" << endl;
    } 
    while (m < 0);

    cout << endl;

    do
    {
        cout << "Enter value for n (must be >= 0): ";
        cin >> n;

        if (n >= 0) break;
        cout << "Invalid input. n cannot be negative!" << endl;
    } 
    while (n < 0);

    cout << "Ackermann(" << m << ", " << n << ") = " << ackermannFunction(m, n) << endl;

    return 0;
}
